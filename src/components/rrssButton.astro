---
interface Props {
    imagesrc: string;
    url: string;
    label: string;
}

const { imagesrc, url, label } = Astro.props;
---

<a href={url} target="_blank">
    <div class="group inline-block relative cursor-pointer max-w-fit min-w-fit">
        <div class="absolute hidden group-hover:block pr-0.5 bottom-1 w-full">
            <div
                class="flex flex-col-reverse justify-start items-center translate-y-full"
            >
                <div
                    class="bg-black shadow-md text-white rounded-lg py-1 px-3 mt-4 cursor-default font-extralight animate-fade-in-up"
                >
                    {label}
                </div>
            </div>
        </div>
        <span class="group"
            ><img
                class="group-hover:scale-110 duration-150"
                src={imagesrc}
            /></span
        >
    </div>
</a>
