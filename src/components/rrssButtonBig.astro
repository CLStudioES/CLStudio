---
interface Props {
  imagesrc: string;
  url: string;
  label: string;
}

const { imagesrc, url, label } = Astro.props;
---

<a href={url} target="_blank">
  <div
    class="group hover:bg-white/10 transition-all duration-150 rounded-md p-4 inline-block relative cursor-pointer max-w-fit min-w-fit"
  >
    <div class="absolute hidden group-hover:block pr-8 bottom-1 w-full">
      <div
        class="flex flex-col-reverse justify-start items-center translate-y-full"
      >
        <div
          class="bg-black shadow-md text-white rounded-lg py-1 px-3 mt-4 cursor-default font-extralight animate-fade-in-up"
        >
          {label}
        </div>
      </div>
    </div>
    <span class="group"
      ><img class="scale-150 duration-150" src={imagesrc} /></span
    >
  </div>
</a>
