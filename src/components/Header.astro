---
import { Image } from "astro:assets";
---

<header
    id="header"
    class="text-white font-light sticky top-0 backdrop-blur-lg transition-all duration-200 md:px-28 mt-2 z-50"
>
    <div
        class="mx-auto flex flex-wrap md:px-5 py-2 flex-col md:flex-row items-center"
    >
        <nav
            class="order-2 md:order-1 md:mr-auto flex flex-wrap items-center text-wrap justify-center space-x-2 md:space-x-10"
        >
            <a
                class="hover:font-light hover:text-clstudio-pink transition-all duration-150 cursor-pointer flex flex-row"
                ><svg
                    width="23"
                    height="23"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="pr-2"
                    ><path
                        d="M3 7m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"
                    ></path><path d="M8 7v-2a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v2"
                    ></path><path d="M12 12l0 .01"></path><path
                        d="M3 13a20 20 0 0 0 18 0"></path></svg
                >Experiencia</a
            >
            <a
                class="hover:font-light hover:text-clstudio-pink transition-all duration-150 cursor-pointer flex flex-row"
            >
                <svg
                    width="23"
                    height="23"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="pr-2"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path
                        d="M15.5 13a3.5 3.5 0 0 0 -3.5 3.5v1a3.5 3.5 0 0 0 7 0v-1.8"
                    ></path><path
                        d="M8.5 13a3.5 3.5 0 0 1 3.5 3.5v1a3.5 3.5 0 0 1 -7 0v-1.8"
                    ></path><path d="M17.5 16a3.5 3.5 0 0 0 0 -7h-.5"
                    ></path><path d="M19 9.3v-2.8a3.5 3.5 0 0 0 -7 0"
                    ></path><path d="M6.5 16a3.5 3.5 0 0 1 0 -7h.5"></path><path
                        d="M5 9.3v-2.8a3.5 3.5 0 0 1 7 0v10"></path></svg
                >Skills</a
            >
            <a
                class="hover:font-light hover:text-clstudio-pink transition-all duration-150 cursor-pointer flex flex-row"
                ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="23"
                    height="23"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="pr-2"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path
                        d="M10 19h-5a2 2 0 0 1 -2 -2v-11a2 2 0 0 1 2 -2h4l3 3h7a2 2 0 0 1 2 2v2.5"
                    ></path><path
                        d="M17.8 20.817l-2.172 1.138a.392 .392 0 0 1 -.568 -.41l.415 -2.411l-1.757 -1.707a.389 .389 0 0 1 .217 -.665l2.428 -.352l1.086 -2.193a.392 .392 0 0 1 .702 0l1.086 2.193l2.428 .352a.39 .39 0 0 1 .217 .665l-1.757 1.707l.414 2.41a.39 .39 0 0 1 -.567 .411l-2.172 -1.138z"
                    ></path></svg
                >Proyectos</a
            >
            <a
                class="hover:font-light hover:text-clstudio-pink transition-all duration-150 cursor-pointer flex flex-row"
                ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="23"
                    height="23"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="pr-2"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"
                    ></path><path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"
                    ></path></svg
                >Sobre mi</a
            >
            <a
                class="hover:font-light hover:text-clstudio-pink transition-all duration-150 cursor-pointer flex flex-row"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="23"
                    height="23"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="pr-2"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"
                    ></path><path
                        d="M16 12v1.5a2.5 2.5 0 0 0 5 0v-1.5a9 9 0 1 0 -5.5 8.28"
                    ></path></svg
                >Contacto</a
            >
        </nav>
        <a class="flex title-font font-medium items-center order-1 md:order-2">
            <Image
                class="w-12 h-12 object-contain pointer-events-none"
                src="/img/CLStudio/CLStudioWhiteLite.png"
                alt="Logo CLStudio"
                width={400}
                height={400}
                format="png"
                loading="eager"
            />
        </a>
    </div>

    <style>
        .glassmorphism {
            background-color: rgba(255, 255, 255, 0.5);
            box-shadow: 0 25px 40px rgba(255, 255, 255, 0.1);
        }
    </style>
    <script>
        const header = document.getElementById("header");
        const scrollThreshold = 10;
        window.addEventListener("scroll", function () {
            const scrollPosition =
                window.pageYOffset || document.documentElement.scrollTop;

            if (scrollPosition >= scrollThreshold) {
                header.classList.add("glassmorphism");
            } else {
                header.classList.remove("glassmorphism");
            }
        });
    </script>
</header>
