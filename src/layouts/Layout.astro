---
import "@fontsource-variable/onest";

import Header from "../components/Header.astro";
import FloatingButtonScroll from "../components/floatingButtonScroll.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="/plugins/fontawesome-6.5.1/css/all.css" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<FloatingButtonScroll />
	</body>
</html>
<style is:global>
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		background: #13151a;
		scroll-behavior: smooth;
	}
	body {
		overflow: auto;
	}
	/* Scrollbar Styling */
	::-webkit-scrollbar {
		padding-top: 60px;
		padding-bottom: 25px;
		width: 10px;
		z-index: 0;
	}

	::-webkit-scrollbar-track {
		background-color: transparent;
		-webkit-border-radius: 10px;
		border-radius: 10px;
		z-index: 0;
	}

	::-webkit-scrollbar-thumb {
		-webkit-border-radius: 10px;
		border-radius: 10px;
		background: #6d6d6d;
		z-index: 0;
	}
</style>
